<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2C2A45"
    android:padding="24dp">

    <!-- Título del Diálogo -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Respuesta Incorrecta!"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Mensaje del Diálogo -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Has fallado. ¿Qué te gustaría hacer?"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Contenedor para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Botón Negativo (Reiniciar) -->
        <Button
            android:id="@+id/dialog_button_negative"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Reiniciar Test"
            android:textColor="#FFC107"
            app:strokeColor="#FFC107"
            android:layout_marginEnd="8dp"/>

        <!-- Botón Positivo (Continuar) -->
        <Button
            android:id="@+id/dialog_button_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Continuar"
            app:backgroundTint="#FFC107"
            android:textColor="#1C1B2B"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
