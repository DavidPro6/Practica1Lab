<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el item est치 seleccionado (activado/checked) -->
    <item android:state_activated="true">
        <shape>
            <!-- Usaremos un color de fondo azul m치s claro para la selecci칩n -->
            <solid android:color="#4A4863" />
            <stroke android:width="2dp" android:color="#FFC107" /> <!-- Borde dorado -->
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="#4A4863" />
            <stroke android:width="2dp" android:color="#FFC107" />

        </shape>
    </item>

    <!-- Estado cuando se est치 presionando el item -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3A3853" /></shape>
    </item>

    <!-- Estado por defecto -->
    <item android:drawable="@android:color/transparent" />
</selector>


