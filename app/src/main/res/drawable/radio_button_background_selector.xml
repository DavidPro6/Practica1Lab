<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el RadioButton estÃ¡ seleccionado (checked): borde dorado brillante -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4A4863" />
            <corners android:radius="12dp" />
            <stroke android:width="3dp" android:color="#FFC107" />
        </shape>
    </item>

    <!-- Estado por defecto (no seleccionado): azul oscuro con borde sutil -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#2C2A45" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#42A5F5" />
        </shape>
    </item>
</selector>
